  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/server-irm/src/main.ts",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
